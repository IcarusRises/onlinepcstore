<% include partials/header %>

<div class="container mx-auto">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1 style="text-align: center; display: block"> Edit: <%= laptop.name.split(" ")[0] %> Laptop</h1>
            <div styel="width: 30%; margin: 0 auto">
                <form action="/laptops/<%= laptop._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[brand]" value="<%= laptop.brand %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[name]" value="<%= laptop.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[image][]" value="<%= laptop.image[0] %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[image][]" value="<%= laptop.image[1] %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[image][]" value="<%= laptop.image[2] %>">
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[original]" value="<%= laptop.original %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[savings]" value="<%= laptop.savings %>">
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="text" name="laptop[price]" value="<%= laptop.price %>">
                    </div> 
                    <div class="form-group text-center">
                        <button href="/new" class="btn btn-lg btn-default">Submit</button>
                    </div>     
                </form>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>



<% include partials/footer %>