<% include partials/header %>

<div class="container-fluid">
    <!-- BREADCRUMB NAVIGATION -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="#">Laptop</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= laptop.name %></li>
        </ol>
    </nav>
    <!-- EDIT/DELETE BUTTONS -->
    <div class="container text-center">
            <a class="btn btn-success" href="/laptops/<%= laptop.id%>/edit">Edit</a>
            <form id="delete-form" action="/laptops/<%= laptop.id%>?_method=DELETE"> </form>class="d-inline" method="Post" 
                <button class="btn btn-danger" type="button">Delete</button>
            </form>
        </div>
    <!--FIRST ROW -->
    <div class="row">
        <!-- FIRST COL - PC AND MINI SLIDER -->
        <div class="container d-flex align-items-center">
            <div class="col-6 ">
                <div id="pc-preview-container" class="container">
                    <!--Carousel Wrapper-->
                    <div id="pc-preview" class="carousel carousel-fade carousel-thumbnails" >
                        <!--Slides-->
                        <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                        <img class="d-block w-100" src="<%= laptop.image[0] %>" alt="<%= `${laptop.name} Image#0` %>">
                                    </div>
                            <% for(let i = 1; i < laptop.image.length; i++){ %>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="<%= laptop.image[i] %>" alt="<%= `${laptop.name} Image#${i}` %>">
                                    </div>
                            <% } %>
                        </div>
                        <!--/.Slides-->
                    </div>
                </div>
            </div>
        <!-- SECOND COL PRICES -->
            <div class="col-6 justify-content">
                <h3 class="card-title"><%= laptop.name %></h3>
                <%if(laptop.original !== null || laptop.savings !== null){ %>
                    <p class="card-text"><span class="text-muted"><s>$<%= laptop.original %> </s></span>  <span class="text-dark">SAVE $<%= laptop.savings %></span></p>
                <% } %>
                <p class="h2 text-danger">$<%= laptop.price %></p>
                <button type="button" class="btn btn-primary mt-2">
                    Add to Cart
                </button>
            </div>
        </div>
    </div>
    <!-- ROW -->
    <div class="row mt-5">
        <div class="col-12">
            <!--  CAROUSEL INDICATORS -->
            <ol class="carousel-indicators">
                <% for(let i = 0; i < laptop.image.length; i++){ %>
                    <% if(laptop.image.length[i] === 0){ %>
                        <li data-target="#pc-preview" data-slide-to="<%= i %>" class="mx-2 active"><img class="d-block w-100" src="<%= laptop.image[i] %>"
                        class="img-fluid"></li>
                    <% } else {%>
                        <li data-target="#pc-preview" data-slide-to="<%= i %>" class="mx-2"><img class="d-block w-100" src="<%= laptop.image[i] %>"
                            class="img-fluid"></li>
                    <% } %>
                <% } %>
            </ol>
        </div>
    </div>
</div> 
    <!-- SECOND ROW -->
    <div class="row">
        <!--COL - CARD WITH NAVIGATION - FEATURES AND SPECS -->
        <div class="col mb-4">
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">Overview</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#specifications" role="tab" aria-controls="specifications" aria-selected="false">Specifications</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
